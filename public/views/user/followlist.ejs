<%if(users.length == 0){%>
	<h3 id="nothing">什么都没有哦！</h3>
<%}%>
<% for(var i=0;i < users.length;i++) {%>
	<%
		var userInfo = JSON.parse(users[i].personInfo);
	%>
	<div class="follow" id="<%= userInfo.id%>">
		<div class="user_head">
			<a href="/users/<%= userInfo.id%>" target="_blank" rel="noopener noreferrer">
				<img src="<%= userInfo.icon%>">
			</a>
		</div>
		<div class="user_messge">
			<h3><%= userInfo.nick_name%></h3>
			<p>粉丝：<a class="user_message_follower" href="/follower/<%= userInfo.id%>" target="_blank" rel="noopener noreferrer"><%= userInfo.fins%></a>关注：<a class="user_message_followee" href="/follow/<%= userInfo.id%>" target="_blank" rel="noopener noreferrer"><%= userInfo.follow%></a>作品：<a  href="/users/<%= userInfo.id%>" target="_blank" rel="noopener noreferrer"><span>
			<%if(userInfo.topic_num){%>
				<%= userInfo.topic_num%>
			<%}else{%>
				0
			<%}%>	
			</span></a></p>
			<%if(userInfo.introduce){%>
				<p><%= userInfo.introduce%></p>
			<%}else{%>
				<p>这家伙很懒，什么都没写</p>
			<%}%>
		</div>
		<div class="isfolles">
			<%if(users[i].follow == true && userInfo!='1'){%>
			<div class="alreadyfollow" onclick="cancelFollow('<%= userInfo.id%>',this)">
				已关注
			</div>
			<%}else{%>
			<div class="notfollow" onclick="follow('<%= userInfo.id%>',this)">
				+关注
			</div>
			<%}%>
		</div>
	</div>
<%}%>