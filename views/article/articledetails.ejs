<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<%include ../title/title%>
   <link href="/css/article/artdetails.css" rel="stylesheet"> 
</head>
<body>
	<%include ../header/header%>
	<div id="main_container">
		<section id="content">
			<div id="title">
				<h3></h3>
				<p>系统分类：<span></span></p>
			</div>
			<div id="art_content">
				<%include ../../public/views/articles/articleDetails%>
			</div>
			<div class="share_">
				<div onclick="greatArticle(this)" class="great">
					<div>赞<div id="count_add">+1</div></div>
				</div>
			</div>
			<h4 class="share_to">分享给好友&nbsp;&nbsp;
			<div class="jiathis_style" style="float: right">
						<a class="jiathis_button_qzone"></a>
						<a class="jiathis_button_tsina"></a>
						<a class="jiathis_button_tqq"></a>
						<a class="jiathis_button_weixin"></a>
			</div>
			</h4>
			
			<div class="report">			
				<div class="collect">
					<img onclick="collectArticle()" src="/img/collect.png">
					<span>收藏</span>
				</div>
			</div>
		</section>
		<section id="comment">
			<div class="newcom">
				<h3 id="comment_count">评论<span>(共0条)</span></h3>
				<div id="comment_area">
					<textarea id="comment_are" onkeyup="javascript:commentCount(this)" placeholder="请发表评论，评论中不要带有侮辱国家和他人的言论，字数在300字以内。"></textarea>
					<h3>还可以输入<span>300</span>字</h3>
				</div>
				<div id="new_com"><span onclick="newcomment()">评论</span></div>
				<div class="comments_top">
					<div></div>
					全部评论
					<div></div>
				</div>
			</div>
			<div id="comments">
			</div>
			<div class="tcdPageCode">
    		</div>
		</section>
		<section id="usermessage">
			<div class="usermessage">
				<div class="user_head">
					<a href="/users/<%=person_info_id%>" rel="noopener noreferrer" target="_blank">
						<img id='user_head'>
					</a>
				</div>
				<a href="/users/<%=person_info_id%>" rel="noopener noreferrer" target="_blank">
					<h3 id="username" class="username"></h3>
				</a>
				<p class="user_des"></p>
				<div class="follow">
					<img src="">
				</div>
				<div id="followcount" class="followcount">
					<span id="follower"><span>粉丝</span><br><i>0</i></span>
					<span id="followee"><span>关注</span><br><i>0</i></span>
				</div>
			</div>
			<div id="art_great_count">
				<span id = "great_count">赞<br><i>0</i></span>
				<span id = "reply_count">评论<br><i>0</i></span>
			</div>
		</section>
	</div><!-- main_end -->
<%include ../footer/footer%>	
<script type="text/javascript" src="http://v3.jiathis.com/code_mini/jia.js" charset="utf-8"></script>
<script src="/js/style.js" type="text/javascript"></script>
<script src="/js/plugins/page/jquery_page.js"></script>
<script src="/js/comment/comment.js" type="text/javascript"></script>
<script src="//cdn.bootcss.com/jquery_lazyload/1.9.7/jquery.lazyload.min.js"></script>
<script src="/js/plugins/ejs/ejs.js" type="text/javascript"></script>
<script src="/js/article/articledetails.js" type="text/javascript"></script>

</body>
	
</html>